{
  "name": "semantic-release-lerna",
  "version": "0.0.7",
  "description": "semantic-release plugin to publish lerna monorepo packages to npm",
  "keywords": [
    "npm",
    "lerna",
    "publish",
    "registry",
    "semantic-release",
    "version"
  ],
  "homepage": "https://github.com/ext/semantic-release-lerna",
  "bugs": {
    "url": "https://github.com/ext/semantic-release-lerna/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/semantic-release-lerna"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "contributors": [
    "Pierre Vanduynslager (https://twitter.com/@pvdlg_)",
    "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
    "Gregor Martynus (https://twitter.com/gr2m)"
  ],
  "main": "index.js",
  "files": [
    "lib",
    "index.js",
    "!*.test.js"
  ],
  "scripts": {
    "codecov": "codecov -f coverage/coverage-final.json",
    "lint": "xo",
    "semantic-release": "semantic-release",
    "pretest": "npm run lint",
    "test": "jest --collectCoverage"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/string-content": "off"
    },
    "space": true
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testTimeout": 10000
  },
  "dependencies": {
    "@lerna/child-process": "^4.0.0",
    "@lerna/collect-updates": "^4.0.0",
    "@lerna/package": "^4.0.0",
    "@lerna/package-graph": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "aggregate-error": "^3.0.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.0.0",
    "lodash": "^4.17.15",
    "tempy": "^1.0.0",
    "write-json-file": "^4.0.0"
  },
  "devDependencies": {
    "@semantic-release/npm": "7.0.10",
    "@types/jest": "26.0.20",
    "codecov": "3.8.1",
    "got": "11.8.2",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "semantic-release": "17.4.0",
    "semver": "7.3.4",
    "stream-buffers": "3.0.2",
    "verdaccio": "4.11.1",
    "xo": "0.38.2"
  },
  "peerDependencies": {
    "@semantic-release/npm": ">= 7",
    "lerna": "^3.2 || ^4",
    "semantic-release": ">=15.0.0 <18.0.0"
  },
  "engines": {
    "node": ">= 12.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate": {
    "extends": [
      "@html-validate"
    ]
  }
}
